<div class="container">
    <form class="form-signin col-md-4 col-md-offset-4" action="/login" method="post">
        <h2 class="form-signin-heading text-center">Sign in</h2>
        <div class="input-group input-group-lg">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-user"></span>
            </span>
                <label for="inputUsername" class="sr-only">Email address</label>
                <input type="username" name="username" id="inputUsername" class="form-control" placeholder="username" required autofocus>
        </div>
        <div class="input-group input-group-lg">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-lock"></span>
            </span>
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
        </div>
        <div class="row">
          <div class="col-xs-10 col-xs-push-2">
              <button class="btn btn-lg btn-block btn-signin" type="submit">Sign in</button>
          </div>
        </div>

    </form>
</div>
